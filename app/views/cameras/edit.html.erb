<div class="container">
  <h1>Edit Camera</h1>
    <%= simple_form_for(@camera) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :optical_zoom %>
    <%= f.input :price_per_day %>
    <%= f.input :address %>
    <%= f.input :resolution %>
    <%= f.submit 'Update Camera', class: 'btn btn-primary' %>
  <% end %>
</div>
