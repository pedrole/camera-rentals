<div class="container mt-5">
  <h1>All our Cameras</h1>
  <p>All <%= @cameras.size %> cameras</p>
  <div class="row gy-4">
    <% @cameras.each do |camera| %>
      <div class="col-md-4">
        <%= link_to camera_path(camera), class:"text-decoration-none" do %>
          <%= render "shared/card_camera", camera: camera %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
