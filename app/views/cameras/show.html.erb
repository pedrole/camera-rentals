<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="d-flex justify-content-between align-items-center">
        <h1><%= @camera.name %></h1>
        <%= link_to "Book", new_camera_reservation_path(@camera), class: "btn btn-success text-white" %>
      </div>
      <p>
        <strong>Optical Zoom:</strong>
        <%= @camera.optical_zoom %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @camera.address %>
      </p>

      <p>
        <strong>Resolution:</strong>
        <%= @camera.resolution %>
      </p>

      <p>
        <strong>Price per day:</strong>
        <%= @camera.price_per_day %>
      </p>
      <p>
        <strong>Owner:</strong>
        <%= @camera.user.first_name %>
      </p>

      <%= link_to 'Back to list', cameras_path %>
    </div>
  </div>
</div>
