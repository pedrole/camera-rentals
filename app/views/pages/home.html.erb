    <p>Book highted rated camera for making your own movies</p>
    <%= link_to "Book now", cameras_path, class: "btn btn-flat" %>
  </div>
</div>



<div class="container">
  <h2 class="text-center my-5">highlighted Products</h2>
  <div class="row">
    <% @cameras.each do |camera| %>
      <div class="col-md-4">
        <%= link_to camera_path(camera), class:"text-decoration-none" do %>
          <%= render "shared/card_camera", camera: camera %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
